<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pig4cloud.pig.admin.mapper.SnMapper">

  <resultMap id="snMap" type="com.pig4cloud.pig.admin.api.entity.Sn">
                  <id property="id" column="id"/>
                        <result property="name" column="name"/>
            </resultMap>

  <!--sn简单分页查询-->
  <select id="getSnPage" resultMap="snMap">
    SELECT
                  id,
                        name
              FROM sys_sn
    <where>
              <if test="sn.id != null and sn.id.trim() != ''">
          AND id = #{sn.id}
        </if>
              <if test="sn.name != null and sn.name.trim() != ''">
          AND name = #{sn.name}
        </if>
          </where>
  </select>



</mapper>
